{
  "compilerOptions": {
    "lib": ["es6"],
    "allowJs": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src",
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
  ],
}
